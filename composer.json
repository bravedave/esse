{
  "name": "bravedave/esse",
  "description": "Essential Core Application",
  "type": "library",
  "license": "MIT",
  "version": "0.0.1",
  "autoload": {
    "psr-4": {
      "bravedave\\esse\\": "src/esse/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "": "src/app/"
    }
  },
  "authors": [
    {
      "name": "David Bray",
      "email": "david@brayworth.com.au"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable" : true,
  "require": {
    "ext-fileinfo": "*",
    "ext-posix": "*",
    "monolog/monolog": "*",
    "symfony/mailer": "*",
    "matthiasmullie/minify": "*",
    "twbs/bootstrap-icons": "*"
  },
  "require-dev": {
    "ext-apcu": "*",
    "ext-session": "*",
    "ext-sqlite3": "*",
    "matthiasmullie/scrapbook": "*",
    "twbs/bootstrap": "*"
  },
  "scripts": {
    "bootstrap": [
      "bash src/esse/resource/dvc-sass-bootstrap.sh",
      "bravedave\\esse\\resource\\importJS::bootstrap"
    ],
    "post-update-cmd": [
      "bash src/esse/resource/dvc-sass-bootstrap.sh",
      "bravedave\\esse\\resource\\importJS::bootstrap"
    ],
    "start": "php -S localhost:8080 www/_mvp.php"
  }
}