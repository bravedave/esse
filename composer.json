{
  "name": "bravedave/esse",
  "description": "Essential Core Application",
  "type": "library",
  "license": "MIT",
  "version": "v22.12.01",
  "autoload": {
    "psr-4": {
      "bravedave\\esse\\": "src/esse/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "": "src/app/"
    }
  },
  "authors": [
    {
      "name": "David Bray",
      "email": "david@brayworth.com.au"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable" : true,
  "require": {
    "php": ">=8.1",
    "ext-fileinfo": "*",
    "ext-posix": "*",
    "matthiasmullie/minify": "*",
    "monolog/monolog": "<3",
    "symfony/mailer": "^6.2",
    "erusev/parsedown": "^1.7"
  },
  "require-dev": {
    "ext-apcu": "*",
    "ext-session": "*",
    "ext-sqlite3": "*",
    "matthiasmullie/scrapbook": "*",
    "twbs/bootstrap": "*",
    "twbs/bootstrap-icons": "*"
  },
  "scripts": {
    "bootstrap": [
      "bash src/esse/resource/sass-bootstrap.sh",
      "bravedave\\esse\\resource\\importJS::bootstrap",
      "bash src/esse/resource/bootstrap-icons.sh"
    ],
    "bootstrap-js": [
      "bravedave\\esse\\resource\\importJS::bootstrap"
    ],
    "post-update-cmd": [
      "bash src/esse/resource/sass-bootstrap.sh",
      "bravedave\\esse\\resource\\importJS::bootstrap",
      "bash src/esse/resource/bootstrap-icons.sh"
    ],
    "start": "php -S localhost:8080 www/_mvp.php",
    "unittest-sendmail": "unit_test::sendmail"
  }
}
